<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <rotate
            android:fromDegrees="45"
            android:pivotY="50%"
            android:pivotX="50%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:width="30dp"
                    android:height="120dp" />
                <solid android:color="#f00" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <rotate
            android:fromDegrees="135"
            android:pivotY="50%"
            android:pivotX="50%"
            android:toDegrees="90">
            <shape android:shape="rectangle">
                <size
                    android:width="30dp"
                    android:height="120dp" />
                <solid android:color="#f00" />
            </shape>

        </rotate>
    </item>


</layer-list>